@model SliderImage
@{
    ViewData["Title"] = "Update";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Update SliderImage</h4>
                    <img src="~/img/@Model.Name" style="width:150px;height:200px" />
                    <form class="forms-sample" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label asp-for="Photo">Name</label>
                            <input asp-for="Photo" class="form-control" placeholder="Photo" accept="image/*">
                            <span class="text-danger" asp-validation-for="Photo"></span>
                        </div>

                        <button type="submit" class="btn btn-primary mr-2">Submit</button>
                        <a asp-action="Index" class="btn btn-light">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationPartial" />
}
