@model Category
@{
    ViewData["Title"] = "Details";
}

<!-- Striped rows start -->
<section class="section">
    <div class="row " id="table-striped">
        <div class="col-12">
            <div class="card">
                <!-- table striped -->
                <h2 class="text-center mt-5 mb-5">Category</h2>
                <div class="table-responsive">

                    <table class="table table-striped mb-0 ">
                        <thead>
                            <tr>
                                <th>NAME</th>
                                <th>Description</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="text-bold-500">@Model.Name</td>
                                <td class="text-bold-500">@Html.Raw(Model.Description)</td>

                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    </div>
</section>
<!-- Striped rows end -->
