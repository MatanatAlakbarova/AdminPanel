@model BlogCard
@{
    ViewData["Title"] = "Details";
}

<section id="content-types">
    <div class="row  justify-content-center text-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-content">
                        <span class="fs-5">@Model.Time.ToShortDateString()</span>
                        <img src="~/img/@Model.Image" class="card-img-top"style="height:500px" />
                        <div class="card-body">
                            <h5 class="card-title">@Model.Title</h5>
                            <p class="card-text">
                                @Model.Paragraph
                            </p>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
                            <a class="btn btn-primary" asp-action="Index">Cancel</a>

                        </div>

                    </div>
                </div>
            </div>
        
    </div>
</section>


