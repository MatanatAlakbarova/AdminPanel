@model List<BasketViewModel>
    @{double sum = 0; }
    @foreach (var item in Model)
    {
        <tr>
            <th scope="row"><img style=" width:50px; height:50px" src="~/img/@item.Image" /></th>
            <td>@item.Name</td>
            <td>@item.Price</td>
            <td style="font-size:20px">
                @if (item.Count == 1)
                {
                    <a class="btn btn-success disabled" id="decrement" data-id="@item.Id" @*asp-controller="Home" asp-action="Decrement" asp-route-id="@item.Id"*@>-</a>
                }
                else
                {<a class="btn btn-success" id="decrement" data-id="@item.Id" @*asp-controller="Home" asp-action="Decrement" asp-route-id="@item.Id"*@>-</a>}
                @item.Count
                <a class="btn btn-success" id="increment" data-id="@item.Id" @*asp-controller="Home" asp-action="Increment" asp-route-id="@item.Id"*@>+</a>
            </td>

            <td>@(item.Price * item.Count)</td>
            @{sum += (item.Price * item.Count);}
            <td> <a class="btn btn-danger" id="delete" data-id="@item.Id" @*asp-controller="Home" asp-action="Delete" asp-route-id="@item.Id"*@>delete</a></td>
        </tr>
    }
<tr>
    <td></td>
    <td></td>
    <td></td>
    
    <td id="sum" class="btn btn-warning">
        @sum
    </td>
    @ViewBag.sum
</tr>
